@model RequestAccounting3.Models.Users.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    //Layout = null;
}

<h2>Register</h2>
<form method="post" asp-controller="Account" asp-action="Register">
    <div asp-validation-summary="All"></div>
    <div>
        <label asp-for="UserName"></label><br />
        <input asp-for="UserName" />
        <span asp-validation-for="UserName"></span>
    </div>
    <div>
        <label asp-for="firstName"></label><br />
        <input asp-for="firstName" />
        <span asp-validation-for="firstName"></span>
    </div>
    <div>
        <label asp-for="lastName"></label><br />
        <input asp-for="lastName" />
        <span asp-validation-for="lastName"></span>
    </div>
    <div>
        <label asp-for="Phone"></label><br />
        <input asp-for="Phone" />
        <span asp-validation-for="Phone"></span>
    </div>
    <div>
        <label asp-for="Password"></label><br />
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="PasswordConfirm"></label><br />
        <input asp-for="PasswordConfirm" />
        <span asp-validation-for="PasswordConfirm"></span>
    </div>
    <div>
        <input type="submit" value="Registration" />
    </div>
</form>
